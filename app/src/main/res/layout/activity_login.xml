<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_layout_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/login_layout_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/login_layout_header"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bar_height"
                    android:background="@drawable/ic_map"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentTop="true">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_mobiletrax"
                        android:paddingRight="@dimen/login_side_padding"
                        android:paddingLeft="@dimen/login_side_padding"
                        android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/login_layout_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_layout_header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/login_top_margin"
                    android:gravity="center_horizontal">

                <TextView
                        android:id="@+id/login_loading_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/layout_white"
                        android:textStyle="italic" />

                <ProgressBar
                        android:id="@+id/logon_loading_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@id/login_loading_status" />

            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/login_layout_content"
                    android:layout_below="@+id/login_layout_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginStart="@dimen/side_padding"
                    android:layout_marginEnd="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/half_bar_height"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                <EditText
                        android:id="@+id/user_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_username"
                        android:hint="@string/text_username_login"
                        android:layout_marginTop="@dimen/area_padding"
                        android:theme="@style/loginThemeEditText"
                        android:textColor="@color/layout_white"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/hint_color" />

                <EditText
                        android:id="@+id/password_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_lock"
                        android:hint="@string/text_password_login"
                        android:layout_marginTop="@dimen/area_padding"
                        android:theme="@style/loginThemeEditText"
                        android:textColor="@color/layout_white"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:textColorHint="@color/hint_color" />

                <EditText
                        android:id="@+id/server_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_setting_server"
                        android:layout_marginTop="@dimen/area_padding"
                        android:theme="@style/loginThemeEditText"
                        android:textColor="@color/layout_white"
                        android:inputType="number"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColorHint="@color/hint_color" />

                <EditText
                        android:id="@+id/socket_host"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_socket_host"
                        android:layout_marginTop="@dimen/area_padding"
                        android:theme="@style/loginThemeEditText"
                        android:textColor="@color/layout_white"
                        android:inputType="number|numberDecimal"
                        android:digits="0123456789."
                        android:maxLength="32"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:textColorHint="@color/hint_color" />

                <EditText
                        android:id="@+id/socket_port"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_socket_port"
                        android:layout_marginTop="@dimen/area_padding"
                        android:theme="@style/loginThemeEditText"
                        android:textColor="@color/layout_white"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:textColorHint="@color/hint_color" />

                <RelativeLayout
                        android:id="@+id/demo_mode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/side_padding"
                        android:layout_marginBottom="@dimen/side_padding">

                    <Switch
                            android:id="@+id/demo_mode_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_alignParentStart="true" />

                    <TextView
                            android:id="@+id/demo_mode_switch_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/demo_mode_switch"
                            android:layout_weight="0.9"
                            android:text="@string/text_demo_mode"
                            android:textColor="@color/layout_white"
                            android:layout_toRightOf="@+id/demo_mode_switch" />

                </RelativeLayout>

                <LinearLayout
                        android:id="@+id/socket_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/demo_mode_layout"
                        android:layout_marginTop="@dimen/side_padding"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    <RelativeLayout
                            android:id="@+id/sub_socket_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Switch
                                android:id="@+id/socket_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="0.9" />

                        <TextView
                                android:id="@+id/comm_switch_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/socket_switch"
                                android:layout_toRightOf="@+id/socket_switch"
                                android:layout_weight="0.1"
                                android:text="@string/text_com_socket"
                                android:textColor="@color/layout_white" />

                        <TextView
                                android:id="@+id/details_text_comm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_weight="0.1"
                                android:textSize="10dp"
                                android:layout_marginTop="@dimen/neighbor_margin_top"
                                android:layout_below="@+id/comm_switch_text"
                                android:layout_toEndOf="@+id/socket_switch"
                                android:textColor="@color/default_grey_label"
                                android:layout_toRightOf="@+id/socket_switch" />

                    </RelativeLayout>

                </LinearLayout>

                <Button
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/clicked_state_button"
                        android:textColor="@color/layout_white"
                        android:text="@string/text_login_btn"
                        android:layout_marginTop="@dimen/side_padding" />

                <Button
                        android:id="@+id/cancel_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorRed"
                        android:textColor="@color/layout_white"
                        android:text="@string/text_cancel_btn"
                        android:layout_marginTop="@dimen/side_padding"
                        android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/login_layout_footer"
                    android:layout_below="@+id/login_layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/copyright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/layout_white"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/login_footer_side_padding" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>


