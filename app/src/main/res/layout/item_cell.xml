<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_parent_item_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="6dp">

    <LinearLayout
            android:id="@+id/layout_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/image_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:contentDescription="image_cell"
                    android:src="@drawable/bts_scan" />

            <TextView
                    android:id="@+id/text_cellref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_toEndOf="@id/image_cell"
                    android:layout_toRightOf="@id/image_cell"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_text_size"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/text_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_cellref"
                    android:layout_margin="4dp"
                    android:layout_toEndOf="@id/image_cell"
                    android:layout_toRightOf="@id/image_cell"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_text_size" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_icon"
            android:layout_margin="4dp">

        <TextView
                android:id="@+id/text_coordinat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size" />

    </RelativeLayout>

</RelativeLayout>

