<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:padding="1dp"
        android:visibility="gone">

    <RelativeLayout
            android:id="@+id/layout_header_collapse"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:background="@color/header_blue"
            android:padding="4dp">

        <ImageButton
                android:id="@+id/image_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/header_blue"
                android:contentDescription="expand"
                android:src="@drawable/arrow_right" />


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_header_collapse"
            android:background="@color/white">

        <TextView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="S\nE\nS\nS\nI\nON\n\nL\nI\nS\nT"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size" />
    </RelativeLayout>

</RelativeLayout>