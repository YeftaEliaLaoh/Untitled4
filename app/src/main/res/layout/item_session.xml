<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp">

    <TextView
            android:id="@+id/text_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black"
            android:textSize="6pt"
            android:textStyle="bold" />

    <RelativeLayout
            android:id="@+id/layout_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_datetime"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/image_cell_tower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:contentDescription="image_cell_tower"
                android:src="@drawable/bts_blue" />

        <TextView
                android:id="@+id/text_total_cell_tower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_toEndOf="@+id/image_cell_tower"
                android:layout_toRightOf="@+id/image_cell_tower"
                android:background="@drawable/shape_grey"
                android:padding="2dp"
                android:text="100"
                android:textSize="@dimen/app_text_size" />

    </RelativeLayout>

</RelativeLayout>